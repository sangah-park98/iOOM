        	$("#impViewZipDown").val(rptNo);
        	document.impViewZipDownForm.action = "/import/downloadImpViewFile.do";
          	document.impViewZipDownForm.submit();
        },
        error: function(xhr, status, error) {
            console.error("다운로드 실패:", error);
        }
    });
};


